{% set image_align = paragraph.field_align_right.value %}
{% set field_resource_link = content.field_resource_link %}
{% set field_image = content.field_image %}

{%
set first_col_classes = image_align == 1 ? 'medium-push-9'
%}

{%
set sec_col_classes = image_align == 1 ? 'medium-pull-4'
%}

{%
set sec_col_med = field_image ? 'medium-8' : 'medium-8 small-centered'
%}
<style>
h1.page-title {display: none;}
</style>
<div class="{{ classes }}">
    <div class="row">
        {% if field_image %}
        <div class="small-12 medium-3 columns {{first_col_classes}}">
            {{ field_image }}
        </div>
        {% endif %}
        <div class="small-12 {{sec_col_med}} columns {{sec_col_classes}}">
            <h1>{{ content.field_title }}</h1>
            {{ content.field_body }}
            {% if field_resource_link %}
                <div class="resource-links">
                    {{ field_resource_link }}
                </div>
            {% endif %}
        </div>
    </div>
</div>
